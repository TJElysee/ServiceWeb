            <Button Content="Matchs" HorizontalAlignment="Left" Height="41" Margin="250,10,0,0" VerticalAlignment="Top" Width="100" Click="btnMatchs_Click"/>
            <Button Content="Caractéristiques" HorizontalAlignment="Left" Height="41" Margin="370,10,0,0" VerticalAlignment="Top" Width="100" Click="btnCaracteristiques_Click"/>
            <Button Content="Bonus" HorizontalAlignment="Left" Height="41" Margin="490,10,0,0" VerticalAlignment="Top" Width="100" Click="btnBonus_Click"/>
        </Grid>
        <TextBox x:Name="tBox" HorizontalAlignment="Left" Height="264" Margin="10,136,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="580"/>

    </Grid>
</Window>
